<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Daily Journal</title>
  <meta charset="utf-8">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/styles.css">
  <nav class="navbar navbar-default">
    <div class="container">
      
        <ul class="nav navbar-nav navbar-right">
          <li id="home"><a href="/dashboard">HOME</a></li>
         
          
        </ul>
    </div>
  </nav>

  <body>
    <div class="container">




<style>
    h1 {
      color: #573b8a;
      font-size: 24px;
      text-align: center;
      margin-top: 20px;
    }
  
    form {
      width: 80%;
      margin: 0 auto;
      margin-top: 20px;
      background-color: #f1f1f1;
      padding: 20px;
      border-radius: 5px;
    }
  
    h2 {
      color: #573b8a;
      font-size: 18px;
      margin-bottom: 10px;
    }
  
    label {
      display: block;
      margin-bottom: 5px;
      font-weight: bold;
    }
  
    input[type="text"],
    input[type="number"],
    input[type="submit"],
    input[type="checkbox"] {
      width: 100%;
      padding: 8px;
      border-radius: 5px;
      border: 1px solid #ccc;
      margin-bottom: 10px;
      box-sizing: border-box;
    }
  
    input[type="submit"] {
      background-color: #573b8a;
      color: #fff;
      font-weight: bold;
      cursor: pointer;
    }
  
    input[type="submit"]:hover {
      background-color: #6d44b8;
    }
  </style>
  
  <h1>Welcome to the Home Page</h1>
  
  <!-- Employee Form -->
  <form action="/employees" method="POST">
    <h2>Employee</h2>
    <label for="employee_id">Employee ID:</label>
    <input type="text" id="employee_id" name="employee_id" required>
  
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" required>
  
    <label for="home_location">Home Location:</label>
    <input type="text" id="home_location" name="home_location" required>
  
    <label for="shift_opted">Shift Opted:</label>
    <input type="text" id="shift_opted" name="shift_opted" required>
  
    <label for="leaves">Preference for Leaves:</label>
    <input type="checkbox" id="leaves" name="leaves">
  
    <label for="work_from_home">Preference for Work from Home:</label>
    <input type="checkbox" id="work_from_home" name="work_from_home">
  
    <label for="cab_id">Cab ID:</label>
    <input type="text" id="cab_id" name="cab_id">
  
    <label for="driver_id">Driver ID:</label>
    <input type="text" id="driver_id" name="driver_id">
  
    <input type="submit" value="Submit">
  </form>
  
  <!-- Driver Form -->
  <form action="/drivers" method="POST">
    <h2>Driver</h2>
    <label for="driver_id">Driver ID:</label>
    <input type="text" id="driver_id" name="driver_id" required>
  
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" required>
  
    <label for="contact_number">Contact Number:</label>
    <input type="text" id="contact_number" name="contact_number" required>
  
    <label for="route">Route:</label>
    <input type="text" id="route" name="route" required>
  
    <label for="cab_id">Cab ID:</label>
    <input type="text" id="cab_id" name="cab_id">
  
    <input type="submit" value="Submit">
  </form>
  
  <!-- Cab Form -->
  <form action="/cabs" method="POST">
    <h2>Cab</h2>
    <label for="cab_id">Cab ID:</label>
    <input type="text" id="cab_id" name="cab_id" required>
  
    <label for="number_plate">Number Plate:</label>
    <input type="text" id="number_plate" name="number_plate" required>
  
    <label for="capacity">Capacity:</label>
    <input type="number" id="capacity" name="capacity" required>
  
    <label for="garage_location">Garage Location:</label>
    <input type="text" id="garage_location" name="garage_location" required>
  
    <input type="submit" value="Submit">
  </form>
  
  <!-- Holiday Form -->
  <form action="/holidays" method="POST">
    <h2>Holiday</h2>
    <label for="holiday_id">Holiday ID:</label>
    <input type="text" id="holiday_id" name="holiday_id" required>
  
    <label for="date">Date:</label>
    <input type="text" id="date" name="date" required>
  
    <label for="description">Description:</label>
    <input type="text" id="description" name="description" required>
  
    <input type="submit" value="Submit">
  </form>
  
  <!-- Co-Employee Form -->
  <form action="/coemployees" method="POST">
    <h2>Co-Employee</h2>
    <label for="employee_id">Employee ID:</label>
    <input type="text" id="employee_id" name="employee_id" required>
  
    <label for="co_employees">Co-Employees:</label>
    <input type="text" id="co_employees" name="co_employees" required>
  
    <input type="submit" value="Submit">
  </form>

    </div>
  <%- include("partials/footer"); -%>